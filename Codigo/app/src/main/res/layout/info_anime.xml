<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="971dp">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/info_imagen"
                    android:layout_width="347dp"
                    android:layout_height="215dp"
                    android:layout_gravity="center"
                    android:textAlignment="gravity"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

                <TextView
                    android:id="@+id/info_título"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Título"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="346dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Descripción"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_descripcion"
                    android:layout_width="343dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Aca va la descripción"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Fecha de estreno"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_estreno"
                    android:layout_width="339dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Aca va la fecha"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Total de capítulos"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_capitulos"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Aca van los capítulos"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="341dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Hora de emisión"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_horario"
                    android:layout_width="336dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Aca va la hora"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Estudio de animación"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_estudio"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Aca va el estudio"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Autor"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_autor"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Aca va el autor"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>