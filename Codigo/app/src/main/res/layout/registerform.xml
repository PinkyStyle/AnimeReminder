<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Crear cuenta"
            android:textAlignment="textStart"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etemail"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#515151"
            android:backgroundTintMode="src_in"
            android:ems="10"
            android:hint="Ingresa tu correo"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@null"
            app:errorEnabled="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mypass2"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#515151"
            android:backgroundTintMode="src_in"
            android:ems="10"
            android:hint="Ingresa tu nombre de usuario"
            android:inputType="textPersonName"
            android:textCursorDrawable="@null"
            app:errorEnabled="true" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mypass"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#515151"
            android:backgroundTintMode="src_in"
            android:ems="10"
            android:hint="Ingresa tu contraseña"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            app:errorEnabled="true" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText" />

        <CheckBox
            android:id="@+id/checkBox"
            style="@android:style/Widget.CompoundButton.CheckBox"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:checked="false"
            android:focusable="auto"
            android:text="Acepto los términos y condiciones del servicio."
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@color/colorPrimaryDark"
            app:errorEnabled="true"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/btnregister"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:text="Continuar" />

    </LinearLayout>

</androidx.cardview.widget.CardView>