<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Nombre"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editar_nombre_anime"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#515151"
                    android:backgroundTintMode="src_in"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Ingresa el nombre"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"
                    android:textCursorDrawable="@null"
                    app:errorEnabled="true" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Descripción"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editar_descripcion"
                    android:layout_width="300dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_edittext"
                    android:ems="10"
                    android:hint="Ingresa la descripción"
                    android:inputType="textMultiLine"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:textAlignment="textStart"
                    app:errorEnabled="true" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Fecha de estreno"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editar_fecha"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:hint="Pulse para elegir una fecha"
                    android:inputType="date"
                    android:maxLines="1"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Cantidad de capitulos"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editar_capitulos"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#515151"
                    android:backgroundTintMode="src_in"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Ingresa la cantidad de capitulos"
                    android:inputType="number"
                    android:textAlignment="viewStart"
                    android:textCursorDrawable="@null"
                    app:errorEnabled="true" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Horario de emisión"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editar_horario"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#515151"
                    android:backgroundTintMode="src_in"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Pulse para elegir una hora"
                    android:inputType="datetime|time"
                    android:textAlignment="viewStart"
                    android:textCursorDrawable="@null"
                    app:errorEnabled="true" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Estudio de animación"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editar_estudio"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#515151"
                    android:backgroundTintMode="src_in"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Ingrese el estudio de animación"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"
                    android:textCursorDrawable="@null"
                    app:errorEnabled="true" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Autor"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editar_autor"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#515151"
                    android:backgroundTintMode="src_in"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Ingrese el autor"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"
                    android:textCursorDrawable="@null"
                    app:errorEnabled="true" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="Imagen"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/editar_imagen"
                    android:layout_width="300dp"
                    android:layout_height="119dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="textStart"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

                <Button
                    android:id="@+id/btneditar"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordes_redondos"
                    android:contextClickable="false"
                    android:ellipsize="start"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>